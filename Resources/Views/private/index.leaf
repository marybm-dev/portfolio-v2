#extend("/private/base")

#export("body") {
<div class="container content">
    <div class="row">
        <div class="ten columns">
            <h4>Projects</h4>
        </div>
        <div class="two columns">
            <form action="/admin/projects/new" method="get">
                <span><input type="submit" class="button-primary" value="Create"/></span>
            </form>
        </div>
    </div>

    <div class="row">
        <div class="two columns">
            <label>Title</label>
        </div>
        <div class="four columns">
            <label>Description</label>
        </div>
        <div class="one column">
            <label>Type</label>
        </div>
        <div class="one columns">
            <label>Image</label>
        </div>
        <div class="one columns">
            <label>Video</label>
        </div>
        <div class="one column">
            <label>Link</label>
        </div>
        <div class="two columns">
        </div>
    </div>

    #loop(projects, "project") {
        <div class="row">
            <div class="two columns">
                <a href="/admin/projects/#(project.id)">
                    <h6><span>#(project.title)</span></h6>
                </a>
            </div>
            <div class="four columns">
                <p><span>#(project.description)</span></p>
            </div>
            <div class="one column">
                <p><span>#(project.type)</span></p>
            </div>
            <div class="one columns">
                #if(project.image) {
                    <span><img src="#(project.image)" width="50" height="50"/></span>
                    } ##else() {
                    <p></p>
                    }
            </div>
            <div class="one columns">
                #if(project.video) {
                    <span><iframe width="75" height="50" src="#(project.video)" frameborder="0" allowfullscreen></iframe></span>
                    } ##else() {
                    <p></p>
                    }
            </div>
            <div class="one column">
                #if(project.link) {
                    <a href="#(project.link)"><span>View</span></a>
                    } ##else() {
                    <p></p>
                    }
            </div>
            <div class="two columns">
                <form action="/admin/projects/#(project.id)/delete" method="post">
                    <input type="submit" value="Delete"/>
                </form>
            </div>
        </div>
    }
</div>
}
